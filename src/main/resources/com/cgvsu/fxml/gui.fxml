<AnchorPane fx:id="anchorPane" prefHeight="883.0" prefWidth="1108.0" style="-fx-background-color: #13151A;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cgvsu.GuiController">
    <MenuBar prefHeight="30.0" prefWidth="176.0" styleClass="fontStyle" stylesheets="@style.css">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onOpenModelMenuItemClick" style="font-size: 20px;" text="Load Model">
            <accelerator>
                <KeyCodeCombination alt="UP" code="F" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
            </MenuItem>
			<MenuItem mnemonicParsing="false" onAction="#saveModel" text="Save Edited Model">
				<accelerator>
					<KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
				</accelerator>
			</MenuItem>
         <styleClass>
            <String fx:value="menu" />
            <String fx:value="menu" />
         </styleClass>
        </Menu>
        <Menu mnemonicParsing="false" text="Camera Options">
            <MenuItem mnemonicParsing="false" onAction="#handleCameraForward" text="Forward">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="UP" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraBackward" text="Backward">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="DOWN" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraLeft" text="Left">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="LEFT" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraRight" text="Right">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="RIGHT" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraUp" text="Up">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraDown" text="Down">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
         <styleClass>
            <String fx:value="menu" />
            <String fx:value="menu" />
         </styleClass>
        </Menu>
    </MenuBar>

    <Canvas fx:id="canvas" height="849.0" layoutX="179.0" layoutY="34.0" width="929.0" AnchorPane.topAnchor="34.0" />
   <ListView fx:id="listOfLoadedModelsNames" focusTraversable="false" layoutY="30.0" onMouseClicked="#selectModel" prefHeight="377.0" prefWidth="176.0" stylesheets="@style.css">
      <contextMenu>
         <ContextMenu autoFix="false" styleClass="contextMenu">
           <items>
             <MenuItem id="ListViewContextDelete" fx:id="listViewContextDelete" mnemonicParsing="false" onAction="#deleteModelFromViewList" text="Delete" />
           </items>
			 <items>
				 <MenuItem id="ListViewContextDelete" mnemonicParsing="false" onAction="#saveInitialModel" text="Save initial Model" />
			 </items>
			 <items>
				 <MenuItem id="ListViewContextDelete" mnemonicParsing="false" onAction="#saveEditedModel" text="Save edited Model" />
			 </items>
         </ContextMenu>
      </contextMenu></ListView>
   <Pane id="controlPane" layoutY="407.0" prefHeight="200.0" prefWidth="176.0" style="-fx-border-radius: 15; -fx-background-color: #2B2E34;">
      <children>
         <Label layoutX="8.0" layoutY="13.0" styleClass="fontStyle" stylesheets="@style.css" text="X Shift" textFill="#cacdd3">
            <font>
               <Font name="Arial Bold" size="14.0" />
            </font>
         </Label>
         <Spinner fx:id="spinnerMoveX" focusTraversable="false" layoutX="61.0" layoutY="10.0" onKeyPressed="#moveXCoordinate" prefHeight="20.0" prefWidth="101.0" stylesheets="@style.css" />
         <Label layoutX="8.0" layoutY="43.0" styleClass="fontStyle" stylesheets="@style.css" text="Y Shift" textFill="#cacdd3">
            <font>
               <Font name="Arial Bold" size="14.0" />
            </font>
         </Label>
         <Spinner fx:id="spinnerMoveY" focusTraversable="false" layoutX="61.0" layoutY="40.0" onKeyPressed="#moveYCoordinate" prefHeight="20.0" prefWidth="101.0" stylesheets="@style.css" />
         <Label layoutX="8.0" layoutY="73.0" styleClass="fontStyle" stylesheets="@style.css" text="Z Shift" textFill="#cacdd3">
            <font>
               <Font name="Arial Bold" size="14.0" />
            </font>
         </Label>
         <Spinner fx:id="spinnerMoveZ" focusTraversable="false" layoutX="61.0" layoutY="70.0" onKeyPressed="#moveZCoordinate" prefHeight="20.0" prefWidth="101.0" stylesheets="@style.css" />
      </children>
   </Pane>
</AnchorPane>
